pipeline {
    agent {
        node {
            label 'agent'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    
    }
    post {
        always {
            echo 'I will say hello'
        }
        failure {
            echo 'This will run when pipeline is failed'
         }
        success {
            echo 'I will  say hello when pipeline is success'
        }
    }
}

